# Docker Environment Configuration
# Copy this file to .env and update with your actual values

# Twilio Configuration
# Get these values from your Twilio Console: https://console.twilio.com

# Account credentials (found in Twilio Console > Account > API Keys & tokens)
TWILIO_ACCOUNT_SID=your_account_sid_here
TWILIO_AUTH_TOKEN=your_auth_token_here

# API Key & Secret (create at https://console.twilio.com/us/account/keys-credentials/api-keys)
TWILIO_API_KEY=your_api_key_here
TWILIO_API_SECRET=your_api_secret_here

# Phone number purchased on Twilio (e.g., +1 415 555 1212)
TWILIO_PHONE_NUMBER=+1234567890

# TwiML Application SID (create at https://console.twilio.com/us/account/developer-tools/twiml-apps)
TWILIO_TWIML_APP_SID=your_twiml_app_sid_here

# Backend configuration
BACKEND_URL=http://localhost:4000

# Frontend configuration (for CORS)
FRONTEND_URL=http://localhost:3000

# (Optional) Port for backend server
PORT=4000

# Docker-specific environment variables
NODE_ENV=production